{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title":"product",
    "description": "Um produto de uma loja de bike",
    "type":"object",
    "properties": {
        "Product":{
            "type":"object",
            "properties": {
                "ProductID":{"type":"string"},
                "Category":{"type":"string"},
                "ProductName":{"type":"string"},
                "Price":{"type":"string"},
                "Class":{"type":"string"},
                "Company":{"type":"string"},
                "Provider":{
                    "properties": {
                        "Name":{"type":"string"},
                        "City":{"type":"string"}
                    },
                    "required":[
                        "Name",
                        "City"
                    ]

            }

        },
        "required":[
            "ProductID",
            "ProductType",
            "Category",
            "Price"
        ]
    }
}
}